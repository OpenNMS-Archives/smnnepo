      <feature>opennms-collection-api</feature>
      <feature>opennms-collection-persistence-rrd</feature>
      <feature>opennms-rrd-api</feature>
      <feature>opennms-rrd-jrobin</feature>

      <bundle>mvn:org.opennms.features.collection/org.opennms.features.collection.sampler/1.13.2-PJSM-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.netmgt.sample/sample-storage-rrd/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

    <feature name="jackson" description="Jackson JSON library" version="2.1.4">
      <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-core/2.1.4</bundle>
      <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-databind/2.1.4</bundle>
      <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-annotations/2.1.4</bundle>
    </feature>

    <feature name="newts-api" description="Newts API" version="1.0.0-SNAPSHOT">
      <feature>jackson</feature>
      <bundle dependency="true">mvn:commons-codec/commons-codec/1.9</bundle>
      <bundle dependency="true">mvn:com.google.guava/guava/15.0</bundle>
      <bundle dependency="true">mvn:org.apache.commons/commons-jexl/2.1.1</bundle>
      <bundle>mvn:org.opennms.newts/newts-api/1.0.0-SNAPSHOT</bundle>

    </feature>

    <feature name="sample-storage-newts" description="Sample Collection and Storage :: Newts" version="1.13.2-PJSM-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>newts-api</feature>

      <bundle>mvn:org.opennms.netmgt.sample/sample-storage-newts/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

