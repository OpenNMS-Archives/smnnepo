<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0" name="opennms-all">    
    <!-- camel features -->
    <repository>mvn:org.apache.camel.karaf/apache-camel/2.10.4/xml/features</repository>
    
    <!--  activemq features -->
    <repository>mvn:org.apache.activemq/activemq-karaf/5.7.0/xml/features</repository>

    <!-- CXF features -->
    <repository>mvn:org.apache.cxf.karaf/apache-cxf/2.7.5/xml/features</repository>
    
    <feature name="snmp" description="OpenNMS SNMP" version="1.13.1-SNAPSHOT">
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.api/1.13.1-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.commands/1.13.1-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.implementations.snmp4j/1.13.1-SNAPSHOT</bundle>
    </feature>
    
    <feature name="sample-api" description="Sample Collection and Storage :: API" version="1.13.1-SNAPSHOT">
      <bundle>mvn:commons-codec/commons-codec/1.7</bundle>
      <bundle>mvn:org.opennms.netmgt.sample/sample-api/1.13.1-SNAPSHOT</bundle>
    </feature>

    <feature name="sample-snmp-config" description="Sample Collection and Storage :: SNMP Configuration" version="1.13.1-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>snmp</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sampler-config-snmp/1.13.1-SNAPSHOT</bundle>
    </feature>

    <feature name="sampler-snmp" description="Sample Collection and Storage :: SNMP Collector" version="1.13.1-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>snmp</feature>
      <feature>sample-snmp-config</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sampler-snmp/1.13.1-SNAPSHOT</bundle>
    </feature>

    <feature name="cassandra-driver" description="Sample Collection and Storage :: Cassandra Driver" version="1.13.1-SNAPSHOT">
      <bundle>mvn:commons-cli/commons-cli/1.2</bundle>
      <bundle>mvn:commons-lang/commons-lang/2.6</bundle>
      <bundle>mvn:joda-time/joda-time/2.2</bundle>
      <bundle>mvn:org.xerial.snappy/snappy-java/1.0.5-M3</bundle>
      <bundle>mvn:org.opennms.netmgt.sample/cassandra-driver/1.0.0-beta1</bundle>
    </feature>

    <feature name="sample-storage-cassandra" description="Sample Collection and Storage :: Cassandra" version="1.13.1-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>cassandra-driver</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sample-storage-cassandra/1.13.1-SNAPSHOT</bundle>
    </feature>

    <feature name="sample-graphs" description="Sample Collection and Storage :: Graphing" version="1.13.1-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>sample-snmp-config</feature>
      <feature>http-whiteboard</feature>
      <feature>cxf-jaxrs</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sample-graphs/1.13.1-SNAPSHOT</bundle>
    </feature>


    <feature name="sampler-standalone" description="Sample Collection and Storage :: Standalone routing" version="1.13.1-SNAPSHOT">
      <configfile finalname="/etc/routes-standalone.xml">mvn:org.opennms.netmgt.sample/sampler-routes/1.13.1-SNAPSHOT/xml/standalone</configfile>
      <feature>sampler-snmp</feature>
      <!-- use the file storage temporarily 
      <feature>sample-storage-cassandra</feature>
      -->
      <feature>camel-blueprint</feature>
      <bundle>blueprint:file:etc/routes-standalone.xml</bundle>
    </feature>

