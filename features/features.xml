    <!-- Sampler features -->

    <!-- API feature -->
    <feature name="sample-api" description="Sample Collection and Storage :: API" version="1.13.2-PJSM-SNAPSHOT">
      <bundle dependency="true">mvn:commons-codec/commons-codec/1.9</bundle>
      <feature>camel-core</feature>
      <feature>opennms-core</feature>
      <feature>opennms-config-jaxb</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sample-api/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

    <!-- Controller -->
    <feature name="sampler-controller" description="Sample Collection and Storage :: Controller" version="1.13.2-PJSM-SNAPSHOT">
      <config name="org.opennms.minion.controller">
			uuid = 12345
		</config>
      <bundle>mvn:org.opennms.netmgt.sample/sampler-controller/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

