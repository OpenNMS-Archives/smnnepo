      <feature>camel-blueprint</feature>
      <feature>sample-api</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sampler-scheduler/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

    <!-- Sampler -->
    <feature name="sampler-snmp" description="Sample Collection and Storage :: SNMP Collector" version="1.13.2-PJSM-SNAPSHOT">
