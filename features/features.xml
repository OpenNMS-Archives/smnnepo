      <bundle dependency="true">mvn:commons-lang/commons-lang/2.6</bundle>
      <bundle dependency="true">mvn:joda-time/joda-time/2.2</bundle>
      <bundle dependency="true">mvn:org.xerial.snappy/snappy-java/1.0.5-M3</bundle>
      <bundle>mvn:org.opennms.netmgt.sample/cassandra-driver/1.0.0-beta1</bundle>
    </feature>

    <feature name="sample-graphs" description="Sample Collection and Storage :: Graphing" version="1.13.2-PJSM-SNAPSHOT">
      <feature>sample-api</feature>
      <feature>sample-config-snmp</feature>
      <feature>http-whiteboard</feature>
      <feature>cxf-jaxrs</feature>
      <bundle>mvn:org.opennms.netmgt.sample/sample-graphs/1.13.2-PJSM-SNAPSHOT</bundle>
    </feature>

    <feature name="sample-storage-cassandra" description="Sample Collection and Storage :: Cassandra" version="1.13.2-PJSM-SNAPSHOT">
